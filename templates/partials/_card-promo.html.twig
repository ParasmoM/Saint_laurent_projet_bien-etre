{% for service in services|reverse %}

{% if service.providers.images is defined %}
    {% set name_image = service.providers.images.first.name ? service.providers.images.first.name %}
{% endif %}

    <div class="card-service">
        <div class="card-service__header">
            <div class="card-service__profile-image">
                {% if name_image is defined %}
                    <img src="{{ asset('assets/uploads/providers/' ~ name_image) }}" alt="">
                {% else %}
                    <span>{{ service.providers|slice(0, 1)|upper }}</span>
                {% endif %}
            </div>
            <div class="card-service__info">
                <div class="card-service__details">
                    <p class="card-service__name">
                        {{ service.providers }}
                    </p>
                    <p class="card-service__service-name">
                        {{ service.service.name }}
                    </p>
                    <p class="card-service__extra-info">
                        {{ service.name}}
                    </p>
                </div>
                <div class="card-service__socials">
                    <a href="{{ service.providers.websiteUrl }}">{{ include('svg/websiteUrl.html.twig') }}</a>
                    <a href="{{ service.providers.instagram }}">{{ include('svg/instagram.html.twig') }}</a>
                    <a href="{{ service.providers.facebook }}">{{ include('svg/facebook.html.twig') }}</a>
                    <a href="{{ service.providers.twitter }}">{{ include('svg/twitter.html.twig') }}</a>
                </div>
            </div>
        </div>
        <div class="card-service__content">
            <p class="card-service__description">
                {{ service.description|length > 90 ? service.description|slice(0, 90) ~ '...' : service.description }}
            </p>
            <button class="card-service__button">
                <a href="#">En savoir plus</a>
            </button>
        </div>
    </div>
{% endfor %}