{% for provider in providers %}

{% if provider.providerPhoto is defined %}
    {% set name_image = provider.providerPhoto.name ? provider.providerPhoto.name %}
{% endif %}

    <div class="card-provider">
        <div class="provider-profile">
            {{ avatar_component(name_image, provider, true) }}
        </div>

        <p class="provider-name">
            {{ provider }}
        </p>

        <p class="provider-mail">
            {{ provider.users.first }}
        </p>

        <p>
            {{ provider.promotion.first.service }}
        </p>
        <button class="provider-button">
            <a href="{{ path('app_providers_profile', {id: provider.id}) }}">Voir le prolfil</a>
        </button>
    </div>
{% endfor %}