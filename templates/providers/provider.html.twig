{% extends 'base.html.twig' %}

{% block title %}Hello ProvidersController!{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/ajax_adresse.js') }}" defer></script>
    <script src="{{ asset('js/ajax_search-bar.js') }}" defer></script>
{% endblock %}

{% block body %}
<main class="list-providers">

    <section class="search-bar">
        {% include "partials/_search-bar.html.twig" with {form: form} only %}
    </section>

    <section class="list-providers__container">
        {% include "partials/_card-provider.html.twig" with {providers: providers} only %}
    </section>

    <div class="providers-pagination">
        {{ knp_pagination_render(providers) }}
    </div>
</main>
{% endblock %}
