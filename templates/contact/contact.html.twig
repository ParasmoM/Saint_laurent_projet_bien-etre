        <div class="contact__content">
            {% for message in app.flashes('success') %}
                <div class="madal-contact active" id="modal-error-contact">
                    <div class="modal__container">
                        {{ message }}
                    </div>
                </div>
            {% endfor %}
            <div class="contact__form">
                <div class="square">

                </div>
                <div class="contact__form__container">
                    <h2>Contactez-nous</h2>
                    <p class="contact__form__intro">
                        N'hésitez pas à nous contacter à tout moment. Nous vous répondrons dès que possible.
                    </p>
                
                    <form action="{{ path('app_contact') }}" method="post">
                        <p class="contact__form__field">
                            {{ form_label(form.Nom) }}
                            {{ form_errors(form.Nom) }}
                            {{ form_widget(form.Nom) }}
                        </p>
                        <p class="contact__form__field">
                            {{ form_label(form.email) }}
                            {{ form_errors(form.email) }}
                            {{ form_widget(form.email) }}
                        </p>
                        <p class="contact__form__field">
                            {{ form_label(form.message) }}
                            {{ form_errors(form.message) }}
                            {{ form_widget(form.message) }}
                        </p>
                        {{ form_widget(form._token) }}
                        <p class="contact__form__field">
                            {{ form_widget(form.submit) }}
                        </p>
                    </form>
                </div>
            </div>            

